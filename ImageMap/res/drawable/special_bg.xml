<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- layout background -->
    <item>

        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="#b0CCCCCC"
                android:startColor="#b0CCCCCC" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- layout foreground -->
    <item
        android:bottom="5px"
        android:left="6px"
        android:right="6px"
        android:top="6px">
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />

            <corners android:radius="5dp" />

            <stroke
                android:width="1dp"
                android:color="#CCCCCC" />
        </shape>
    </item>

</layer-list>