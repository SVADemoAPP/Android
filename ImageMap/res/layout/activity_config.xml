<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_config"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/top"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55dp"
            android:background="@drawable/top_line" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:onClick="config_backClick" >

            <Button
                android:id="@+id/config_btn_back"
                android:layout_width="13dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/title_back_selector"
                android:onClick="config_backClick" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/set_guandao"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="#E6F5FB"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#0288F0"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/Static_threshold"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/threshold"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="#E6F5FB"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#0288F0"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/readius"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/readius"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="#E6F5FB" >

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#0288F0"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/weights"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/weights"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="#E6F5FB" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#0288F0"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/crossweights"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/crossWeights"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="#E6F5FB"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#0288F0"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/max_deviation"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/maxDeviate"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="#E6F5FB"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#0288F0"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/Exceed_max_deviation"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/moreMaxDeviate"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="#E6F5FB"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#0288F0"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/Correction_Map_Directions"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/direction"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="#E6F5FB"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#0288F0"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/errorAngle"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/errorAngle"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="#E6F5FB"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#0288F0"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/positioningError"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/positioningError"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="#E6F5FB"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#0288F0"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/filterNumber"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/filterNumber"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="#E6F5FB"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#0288F0"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/gaussVariance"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/gaussVariance"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp" >

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/preference_save_button_item"
                    android:paddingBottom="10dp"
                    android:paddingLeft="55dp"
                    android:paddingRight="55dp"
                    android:paddingTop="10dp"
                    android:text="@string/save"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>