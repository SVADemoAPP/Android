<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:id="@+id/rl_push_message"
        android:layout_width="216dp"
        android:layout_height="80dp"
        android:paddingBottom="10dp"
        android:background="@drawable/push_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:src="@drawable/failed" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/push_btn"
            android:layout_toRightOf="@id/logo2"
            android:padding="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text=""
                android:textColor="#000000"
                android:visibility="invisible"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="0.8"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/push_btn"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/special_btn"
            android:text="@string/looking_video"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>
